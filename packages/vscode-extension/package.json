{
    "name": "devmemory-ai-code-recall",
    "displayName": "Dev Memory â€” AI Code Recall",
    "description": "Local-first AI code recall extension. Index and search your project memory with zero cloud.",
    "icon": "assets/logo/dev-memory-brain-techy-128.png",
    "version": "1.0.0",
    "author": "abcSTARK",
    "publisher": "devmemory",
    "engines": {
        "vscode": ">=1.85.0"
    },
    "activationEvents": [
        "onStartupFinished",
        "onCommand:devmemory.indexProject",
        "onCommand:devmemory.searchMemory",
        "onCommand:devmemory.openWelcome"
    ],
    "main": "./dist/extension.js",
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "devmemory.indexProject",
                "title": "Dev Memory: Index Project"
            },
            {
                "command": "devmemory.searchMemory",
                "title": "Dev Memory: Search Project Memory"
            },
            {
                "command": "devmemory.openWelcome",
                "title": "Dev Memory: Open Welcome Page"
            }
        ]
    },
    "scripts": {
        "build": "tsc",
        "package:prepare": "node scripts/prepare-package.js",
        "bundle:mcp": "node scripts/bundle-mcp.js",
        "package": "npm run build && npm run bundle:mcp && npm run package:prepare && cd .vsce-dist && vsce package --no-dependencies"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "esbuild": "^0.18.15",
        "fs-extra": "^11.1.1",
        "typescript": "^5.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/abcSTARK/dev-memory-ai-code-recall"
    },
    "license": "MIT",
    "files": [
        "dist",
        "assets",
        "package.json",
        "README.md",
        "LICENSE.txt"
    ]
}
